<Window x:Class="ScriptPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shared="clr-namespace:ScriptPlayer.Shared;assembly=ScriptPlayer.Shared"
        mc:Ignorable="d" PreviewKeyDown="MainWindow_OnPreviewKeyDown" Closing="MainWindow_OnClosing"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="ScripPlayer" Height="591" Width="954" Loaded="Window_Loaded" Icon="ScriptPlayerIcon.ico">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"></BooleanToVisibilityConverter>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="383*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <shared:VideoPlayer Volume="{Binding Volume}" HideMouse="true"  MouseLeftButtonDown="VideoPlayer_OnMouseLeftButtonDown" MouseDoubleClick="VideoPlayer_OnMouseDoubleClick" Grid.Row="1" x:Name="VideoPlayer" Grid.ColumnSpan="2" MediaEnded="VideoPlayer_MediaEnded" MouseRightButtonDown="VideoPlayer_MouseRightButtonDown"/>

        <shared:Flash Grid.ColumnSpan="2" Visibility="{Binding ElementName=cckFlash, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}" Grid.Row="1" Grid.Column="0" Height="40" x:Name="flash" HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
            <shared:Flash.OpacityMask>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1" >
                    <GradientStop Color="Transparent" Offset="0"/>
                    <GradientStop Color="Black" Offset="1"/>
                </LinearGradientBrush>
            </shared:Flash.OpacityMask>
        </shared:Flash>
        <shared:OverlayText IsHitTestVisible="False" x:Name="OverlayText" Grid.Row="1" Margin="10" Grid.ColumnSpan="2" Grid.Column="0" />

        <Grid Name="Shade" Grid.Row="1" Grid.ColumnSpan="2" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="0*"/>
            </Grid.RowDefinitions>

            <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" shared:HideOnHover.IsActive="True"/>
            <Rectangle Fill="Black" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="2"></Rectangle>
        </Grid>

        <Menu Name="MnuMain" Grid.Row="0" Grid.ColumnSpan="2">
            <MenuItem Header="File">
                <MenuItem Header="Open Video" Click="mnuOpenVideo_Click"/>
                <MenuItem Header="Open Script" Click="mnuOpenScript_Click"/>
                <Separator/>
                <MenuItem Header="Add to Playlist" Click="mnuAddScripts_Click"/>
                <MenuItem Header="Show Playlist" Click="mnuShowPlaylist_Click"/>
            </MenuItem>
            <MenuItem Header="Devices">
                <MenuItem Header="Connect Launch directly" Click="btnConnectLaunch_OnClick"/>
                <MenuItem Header="Connect via Buttplug" Click="btnConnectButtplug_OnClick"/>
            </MenuItem>
        </Menu>

        <DockPanel Background="White" LastChildFill="True" Name="PlayerControls" 
                   Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
            <DockPanel.Resources>
                <Style TargetType="Button" BasedOn="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                    <Setter Property="FontFamily" Value="Webdings"/>
                    <Setter Property="FontSize" Value="20"/>
                    <Setter Property="Width" Value="30"/>
                    <Setter Property="Height" Value="30"/>
                    <Setter Property="DockPanel.Dock" Value="Left"></Setter>
                </Style>
                <Style TargetType="Separator" BasedOn="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}">
                    <Setter Property="Margin" Value="4"/>
                </Style>
            </DockPanel.Resources>
            <Button ToolTip="Play / Pause" Name="btnPlayPause" Content="4" Click="btnPlayPause_Click"/>
            <Button ToolTip="Skip close to next event" Content="8" Click="btnSkip_Click"/>

            <Separator Visibility="Collapsed"/>
            <Button Content="9"  Visibility="Collapsed"/>
            <Button Content=":"  Visibility="Collapsed"/>

            <TextBlock TextAlignment="Right" DockPanel.Dock="Right" Name="txtProgress" VerticalAlignment="Center" Width="90" Margin="0,0,8,0">
                <TextBlock.Text>
                    <MultiBinding StringFormat="{}{0:h\:mm\:ss} / {1:h\:mm\:ss}">
                        <Binding ElementName="VideoPlayer" Path="TimeSource.Progress"/>
                        <Binding ElementName="VideoPlayer" Path="Duration"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
            <Slider VerticalAlignment="Center" Width="50" Value="{Binding Volume, Mode=TwoWay}" Minimum="0" Maximum="100" DockPanel.Dock="Right" Style="{DynamicResource VolumeSliderStyle}" Margin="0,6"></Slider>
            <shared:SeekBar Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Name="SeekBar" Progress="{Binding ElementName=VideoPlayer, Path=TimeSource.Progress}" Duration="{Binding ElementName=VideoPlayer, Path=Duration}" Seek="SeekBar_OnSeek"/>
        </DockPanel>
        <Grid shared:HideOnHover.IsActive="True" Width="140" Background="White" Grid.Column="1" HorizontalAlignment="Stretch" Margin="0" Grid.Row="1" VerticalAlignment="Stretch">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <TextBlock Margin="4" HorizontalAlignment="Center" Text="Settings" FontSize="20"/>

                    <StackPanel Margin="4" ToolTip="Timespan by which every script command will be delayed. Negative values will cause the commands to be executed ahead of time.">
                        <TextBlock TextAlignment="Center" Margin="0" Text="Script Delay"/>
                        <Slider Margin="0,4" Name="sldDelay" Minimum="-200" Maximum="200" ValueChanged="sldDelay_OnValueChanged" />
                        <TextBlock TextAlignment="Center" Margin="0" Text="{Binding ElementName=sldDelay, Path=Value, StringFormat={}{0:f0} ms}"/>
                    </StackPanel>

                    <StackPanel Margin="4" ToolTip="Minimum and maximum position of the Launch. Values received from the script will be scaled accordingly.">
                        <TextBlock Margin="0" HorizontalAlignment="Center" Text="Range"/>
                        <shared:RangeSlider Margin="0,4" Name="sldRange" Minimum="0" Maximum="99" LowerValue="{Binding MinPosition, Mode=TwoWay}" UpperValue="{Binding MaxPosition, Mode=TwoWay}"/>
                        <DockPanel LastChildFill="False">
                            <TextBlock Margin="4,0" Text="{Binding MinPosition}" DockPanel.Dock="Left"/>
                            <TextBlock Margin="4,0" Text="{Binding MaxPosition}" DockPanel.Dock="Right"/>
                        </DockPanel>
                    </StackPanel>

                    <StackPanel Margin="4" ToolTip="Static multiplier that is applied after the automatic speed detection.">
                        <TextBlock Margin="0" Text="Speed Multiplier" TextAlignment="Center"/>
                        <Slider Margin="0,4" Name="sldSpeed" Minimum="0.5" Maximum="2.0" Value="{Binding SpeedMultiplier}"/>
                        <TextBlock Margin="0" Text="{Binding SpeedMultiplier, StringFormat={}x{0:f1}}" TextAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Margin="4" ToolTip="Minimal delay between two script commands">
                        <TextBlock Margin="0" Text="Min Command Delay" TextAlignment="Center"/>
                        <Slider LargeChange="1" Margin="0,4" Name="sldCommandDelay" Minimum="100" Maximum="200" Value="{Binding CommandDelay}" SmallChange="1"/>
                        <TextBlock Margin="0" Text="{Binding CommandDelay, StringFormat={}{0:f0} ms}" TextAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Margin="4" ToolTip="Will automatically skip command gaps of more than 10s.">
                        <CheckBox Content="Auto-Skip Gaps" Name="cckAutoSkip"/>
                    </StackPanel>
                    
                    <Separator/>
                        
                    <TextBlock Margin="4,8,4,4" HorizontalAlignment="Center" Text="Debug" FontSize="20"/>
                    <CheckBox Margin="4" Name="cckHeatMap" Checked="CckHeatMap_OnChecked" Unchecked="CckHeatMap_OnChecked">Show Heat Map</CheckBox>
                    <TextBlock Margin="4" Text="Test Patterns"/>
                    <ComboBox Margin="4" Name="cmbPattern"></ComboBox>
                    <Button Margin="4,0,4,4" Content="Insert Pattern" VerticalAlignment="Top" Click="btnTestPattern_Click" />
                    <CheckBox IsChecked="False" Name="cckLogMarkers" Margin="4" Content="Log Markers"/>
                    <CheckBox IsChecked="False" Name="cckFlash" Margin="4" Content="Flash on Event"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>







