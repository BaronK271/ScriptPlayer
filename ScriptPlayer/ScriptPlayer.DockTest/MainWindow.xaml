<Window x:Class="ScriptPlayer.DockTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScriptPlayer.DockTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <local:DockContainerPanel DockType="Vertical">
            <local:DockContainer>
                <Grid Background="Blue" MinWidth="30" MinHeight="30"></Grid>
            </local:DockContainer>
            <local:DockContainer>
                <Grid Background="Green" MinWidth="30" MinHeight="30"></Grid>
            </local:DockContainer>
            <local:DockContainer>
                <Grid Background="Red" MinWidth="30" MinHeight="30"></Grid>
            </local:DockContainer>
        </local:DockContainerPanel>
    </Grid>
</Window>
